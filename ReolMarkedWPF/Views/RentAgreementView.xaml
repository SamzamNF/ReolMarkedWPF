<Page x:Class="ReolMarkedWPF.Views.RentAgreementView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ReolMarkedWPF.Views"
      xmlns:models="clr-namespace:ReolMarkedWPF.Models" xmlns:viewmodels="clr-namespace:ReolMarkedWPF.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:RentAgreementViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="RentAgreementView">

    <Page.Resources>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="45" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Titel -->
        <Border Grid.ColumnSpan="3" BorderBrush="DarkRed" BorderThickness="1" HorizontalAlignment="Stretch">
            <TextBlock Text="Lejeadministration" FontSize="30" FontWeight="Bold" Margin="5" HorizontalAlignment="Stretch"/>
        </Border>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="3">
            <TextBlock Text="Eksisterende aktive aftaler:" FontSize="24" FontWeight="Bold"/>
        </StackPanel>

        <!-- 1: DataGrid med lejeaftaler -->
        <DataGrid Grid.Column="0" Grid.Row="2"
                  ItemsSource="{Binding RentAgreements}"
                  SelectedItem="{Binding SelectedRentAgreement, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  Margin="10"
                  IsReadOnly="True"
                  Background="Transparent">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Aftale ID" Binding="{Binding RentAgreementID}" Width="*" />
                <DataGridTextColumn Header="Startdato" Binding="{Binding StartDate}" Width="*" />
                <DataGridTextColumn Header="Slutdato" Binding="{Binding EndDate}" Width="*" />
                <DataGridTextColumn Header="Shelfvendor" Binding="{Binding ShelfVendorID}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- 2: Inputfelter + rediger/slet knapper -->
        <StackPanel Grid.Column="1" Grid.Row="2" VerticalAlignment="Top" Margin="10">
            <TextBlock Text="Rediger/Slet valgt aftale" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            
            <TextBlock Text="Startdato:"
                       Margin="125,100,0,0"
                       FontSize="15"/>
            <TextBox Margin="0,5,0,10" Text="{Binding StartDate}" 
                     Height="30"
                     Width="400"
                     Padding="2"
                     FontSize="15"/>
            
            <TextBlock Text="Slutdato:"
                       Margin="125,0,0,0"
                       FontSize="15"/>
            <TextBox Margin="0,5,0,10" Text="{Binding EndDate}" 
                     Height="30"
                     Width="400"
                     Padding="2"
                     FontSize="15"/>

            <Button Content="Slet" MinHeight="40" Margin="0,200,0,10"
                    Command="{Binding DeleteRentCommand}" 
                    Width="500"
                    Height="80"
                    Background="OliveDrab"
                    Foreground="White"
                    FontSize="35"
                    FontWeight="Bold"/>

            <Button Content="Rediger" MinHeight="40" Margin="0,0,0,10"
                    Command="{Binding EditRentCommand}" 
                    Width="500"
                    Height="80"
                    Background="OliveDrab"
                    Foreground="White"
                    FontSize="35"
                    FontWeight="Bold"/>
            
        </StackPanel>

        <!-- Højre side kontroller -->
        <TextBlock Grid.Row="0" Grid.Column="1" Text="Ny lejeaftale:" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"></TextBlock>

        <Separator Foreground="DarkGreen" Grid.Row="1" Grid.Column="1"></Separator>

        <Viewbox Grid.Row="2" Grid.Column="2" Stretch="Uniform" VerticalAlignment="Top">
            <!-- Funktioner til lejeaftaler -->
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                
                <TextBlock Text="Foretag et valg:" Margin="5,5,5,5"></TextBlock>
                <Separator Margin="5,5,5,5" Background="DarkOrange"/>
                
                <Button Content="Opret ny lejeaftale" Foreground="AliceBlue" 
                        Background="OliveDrab" 
                        Margin="4,4,4,4" 
                        FontWeight="ExtraBlack" 
                        MinHeight="50" 
                        Command="{Binding MainVM.ShowCreateRentViewCommand}"></Button>
                <TextBlock Text="Funktionen fører dig videre til en ny side."></TextBlock>
                
                <Separator Margin="5,5,5,5" Background="DarkRed"/>
                <TextBlock FontWeight="Bold" Text="Administrér eksisterende lejeaftaler i menupunktet til højre."></TextBlock>
                
                <Image MaxHeight="300" Width="Auto" Grid.Row="2" Grid.Column="1" Source="/Assets/Images/shelf.png" HorizontalAlignment="Stretch" VerticalAlignment="Top"></Image>
            </StackPanel>


        </Viewbox>
    </Grid>
</Page>
