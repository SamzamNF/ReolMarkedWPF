<Page x:Class="ReolMarkedWPF.Views.Welcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ReolMarkedWPF.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Welcome">

    <!-- For at sikre ensartet skalering på forskellige skærme er denne side lagt i ViewBox -->
    <Viewbox>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Første skærm der vises når brugeren åbner programmet -->
        
        <TextBlock Text="Velkommen til Middelby ReolMarked!" FontSize="46" FontWeight="Bold" Foreground="DarkGreen" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="0"/>
        <TextBlock Text="Vælg en funktion fra menuen til venstre for at komme i gang." FontSize="34" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="1"/>
        <Image Grid.Row="2" Source="/Assets/Images/shelf.png" Height="Auto" Width="Auto" HorizontalAlignment="Center" />

    </Grid>
    </Viewbox>
</Page>
