<Page x:Class="ReolMarkedWPF.Views.ShelfVendorView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="ShelfVendorView"
      Background="{StaticResource BackgroundColor}">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="0,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Text="Lejere" Style="{StaticResource PageHeader}" Grid.Row="0"/>

            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding ShelfVendors}"
                      SelectedItem="{Binding SelectedShelfVendor, Mode=TwoWay}"
                      AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ShelfVendorID}" Width="Auto" />
                    <DataGridTextColumn Header="Fornavn" Binding="{Binding FirstName}" Width="*" />
                    <DataGridTextColumn Header="Efternavn" Binding="{Binding LastName}" Width="*" />
                    <DataGridTextColumn Header="Telefon" Binding="{Binding PhoneNumber}" Width="*" />
                    <DataGridTextColumn Header="E-mail" Binding="{Binding Email}" Width="2*" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Border Grid.Column="1" Background="#FFFFFF" CornerRadius="5" Padding="15">
            <StackPanel VerticalAlignment="Top">
                <TextBlock Text="Fornavn:" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>
                <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,0,0,10"/>

                <TextBlock Text="Efternavn:" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>
                <TextBox 
                    Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" 
                    Margin="0,0,0,10"/>

                <TextBlock Text="Telefon:" 
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>
                <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,0,0,10"/>

                <TextBlock Text="E-mail:" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,0,0,10"/>

                <TextBlock Text="Betalingsmetode:" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>
                
                <ComboBox ItemsSource="{Binding PaymentOptions}"
                          SelectedItem="{Binding SelectedPaymentOption, Mode=TwoWay}"
                          Margin="0,0,0,10"/>

                <TextBlock Text="Betalingsinformation:" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>
                <TextBox Text="{Binding PaymentInfo, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,0,0,20"/>

                <!-- Knapper -->
                <Button Content="Tilføj ny lejer" Command="{Binding AddShelfVendorCommand}" 
                        Style="{StaticResource CtaButton}" 
                        Margin="0,730,0,10"/>
                
                <Button Content="Rediger lejer" 
                        Command="{Binding EditShelfVendorCommand}" 
                        Style="{StaticResource EditButton}" 
                        Margin="0,0,0,10"/>
                
                <Button Content="Slet lejer" 
                        Command="{Binding DeleteShelfVendorCommand}" 
                        Style="{StaticResource DeleteButton}"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>