<Page
    x:Class="ReolMarkedWPF.Views.ShelfVendorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReolMarkedWPF.Views"
    mc:Ignorable="d"
    d:DesignHeight="1080"
    d:DesignWidth="1920"
    Title="ShelfVendorView">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Titel -->
        <Border BorderBrush="DarkOrange" BorderThickness="1" HorizontalAlignment="Stretch" Grid.Column="0" Grid.Row="0">
            <TextBlock Text="Lejere" FontSize="30" FontWeight="Bold" Margin="5" HorizontalAlignment="Stretch"/>
        </Border>

        <!-- DataGrid til liste over lejeaftaler -->
        <DataGrid
            Grid.Row="1" Grid.Column="0"
            Margin="5"
            ItemsSource="{Binding ShelfVendors}"
            SelectedItem="{Binding SelectedShelfVendor, Mode=TwoWay}"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            SelectionMode="Single"
            CanUserAddRows="False"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            ScrollViewer.HorizontalScrollBarVisibility="Auto">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ShelfVendorID}" Width="Auto" />
                <DataGridTextColumn Header="Fornavn" Binding="{Binding FirstName}" Width="*" />
                <DataGridTextColumn Header="Efternavn" Binding="{Binding LastName}" Width="*" />
                <DataGridTextColumn Header="Telefon" Binding="{Binding PhoneNumber}" Width="*" />
                <DataGridTextColumn Header="E-mail" Binding="{Binding Email}" Width="2*" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Højre side kontroller -->
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="5" VerticalAlignment="Top" HorizontalAlignment="Center" Width="300">
            
            <TextBlock Text="Fornavn:" FontSize="20" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" 
                     Height="30" Margin="0,0,0,10"
                     FontSize="20"/>

            <TextBlock Text="Efternavn:" FontSize="20" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" 
                     Height="30" Margin="0,0,0,10"
                     FontSize="20"/>

            <TextBlock Text="Telefon:" FontSize="20" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}"
                     Height="30" Margin="0,0,0,10"
                     FontSize="20"/>

            <TextBlock Text="E-mail:" FontSize="20" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                     Height="30" Margin="0,0,0,10"
                     FontSize="20"/>

            <TextBlock Text="Betalingsmetode:" FontSize="20" FontWeight="Bold" Margin="0,0,0,5"/>
            <ComboBox
                ItemsSource="{Binding PaymentOptions}"
                SelectedItem="{Binding SelectedPaymentOption, Mode=TwoWay}"
                Height="30" Margin="0,0,0,10" />

            <TextBlock Text="Betalingsinformation:" FontSize="20" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding PaymentInfo, UpdateSourceTrigger=PropertyChanged}" Height="30" Margin="0,0,0,10"/>

            <Button
                Content="Tilføj ny kunde"
                Command="{Binding AddShelfVendorCommand}"
                Width="150" Height="40" Margin="0,0,0,10"
                Background="DarkGreen"
                Foreground="White"
                FontWeight="Bold" />

            <Button
                Content="Rediger kunde"
                Command="{Binding EditShelfVendorCommand}"
                Width="150" Height="40" Margin="0,0,0,10"
                Background="DarkOrange"
                Foreground="White"
                FontWeight="Bold" />

            <Button
                Content="Slet kunde"
                Command="{Binding DeleteShelfVendorCommand}"
                Width="150" Height="40" Margin="0,0,0,10"
                Background="DarkRed"
                Foreground="White"
                FontWeight="Bold" />
        </StackPanel>
    </Grid>
</Page>
