<Page x:Class="ReolMarkedWPF.Views.RentAgreementChooseShelfView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="RentAgreementChooseShelfView"
      Background="{StaticResource BackgroundColor}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.2*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Text="Opret Lejeaftale:" Style="{StaticResource PageHeader}"/>

        

        <Border Grid.Row="1" Background="#FFFFFF" CornerRadius="5">
            
            <Viewbox Stretch="Uniform">
                <Canvas Width="1280" Height="720">
                    
                    <TextBlock Text="Vælg reol:"
                               Canvas.Left="0"
                               Canvas.Top="-60"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="{StaticResource DisabledForegroundColor}"
                               Padding="10"/>
                    
                    <Border BorderBrush="{StaticResource BorderColor}" BorderThickness="5" Width="1280" Height="720"/>

                    <Border Background="{StaticResource BorderColor}" Canvas.Left="20" Canvas.Top="20" Width="300" Height="60" CornerRadius="5"/>
                    <TextBlock Text="KASSE" FontWeight="Bold" FontSize="24" Foreground="{StaticResource MutedForegroundColor}" Canvas.Left="125" Canvas.Top="35"/>

                    <Border Background="{StaticResource BackgroundColor}" Canvas.Left="540" Canvas.Top="660" Width="200" Height="60" />
                    <TextBlock Text="INDGANG" FontWeight="Bold" FontSize="24" Foreground="{StaticResource MutedForegroundColor}" Canvas.Left="580" Canvas.Top="675"/>

                    <!-- Bruger listen af "Shelves" til at lave en masse knapper, som kan
                    bruges til at vælge en reol -->
                    <ItemsControl ItemsSource="{Binding Shelves}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemContainerStyle>
                            <!-- Reolerne bliver sat efter deres X&Y koordinater,
                            som de får sat ind i viewmodel-->
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Canvas.Left" Value="{Binding X}" />
                                <Setter Property="Canvas.Top" Value="{Binding Y}" />
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <!-- Binder knappen til at vise ShelfNumber fra listen af shelves -->
                                <!-- Den bliver også binded til at sende netop sit shelfnumber ud 
                                når den klikkes på til viewmodel, hvor det bruges i SelectShelf()
                                og så AddRent()-->
                                <Button Width="50" Height="50" 
                                        Content="{Binding ShelfNumber}"
                                        Command="{Binding DataContext.SelectShelfCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                        CommandParameter="{Binding ShelfNumber}">
                                    <Button.Style>
                                        <!-- Skifter farverne alt efter om de er optaget eller ej -->
                                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                            <Setter Property="Background" Value="{StaticResource AccentColorPrimary}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsOccupied}" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource DangerColor}"/>
                                                    <Setter Property="IsHitTestVisible" Value="False"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Canvas>
            </Viewbox>
        </Border>
        <Border Background="#FFFFFF" Grid.Row="1" Grid.Column="1">
            <StackPanel Margin="20,0,0,0">
                
                <TextBlock Text="Lejeaftale"
                           FontWeight="Bold"
                           Margin="0,105,0,0"/>
                
                <TextBlock Text="Vælg reol og indtast data: "
                           TextWrapping="Wrap"
                           Margin="0,1,0,15"
                           Foreground="{StaticResource MutedForegroundColor}"/>

                
                <TextBlock Text="ReolNummer:"
                           FontWeight="Bold"
                           Margin="0,10,0,0"
                           />

                <TextBox Text="{Binding ShelfNumber, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,5,20,0"/>

                <TextBlock Text="ReolLejer:"
                           FontWeight="Bold"
                           Margin="0,10,0,0"/>
                
                <ComboBox ItemsSource="{Binding ShelfVendors}"
                          SelectedItem="{Binding SelectedShelfVendor, Mode=TwoWay}"
                          DisplayMemberPath="ShelfVendorID"
                          Margin="0,5,20,0"/>

                <TextBlock Text="Start dato (dd/mm/yyyy):" 
                                       FontWeight="Bold" 
                                       Margin="0,10,0,5"/>

                <TextBox Text="{Binding StartDateText, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,5,20,0"/>

                <TextBlock Text="Slut dato (dd/mm/yyyy):" 
                                       FontWeight="Bold" 
                                       Margin="0,10,0,5"/>

                <TextBox Text="{Binding EndDateText, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,5,20,0"/>

                <StackPanel Orientation="Horizontal" Margin="0,10,5,5">
                    <TextBlock Text="Pris:" Margin="0,0,5,0"
                               FontWeight="Bold"/>
                    <TextBlock Text="{Binding SelectedShelf.Price}" 
                               FontWeight="Bold"/>
                </StackPanel>

                <Button Content="Registrer aftale"
                        Command="{Binding AddRentCommand}"
                        Style="{StaticResource CtaButton}"
                        Margin="0,5,20,0"/>

            </StackPanel>
        </Border>
    </Grid>
</Page>