<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <SolidColorBrush x:Key="BackgroundColor">#F5F5F5</SolidColorBrush>
    <SolidColorBrush x:Key="ForegroundColor">#212121</SolidColorBrush>
    <SolidColorBrush x:Key="MutedForegroundColor">#757575</SolidColorBrush>
    <SolidColorBrush x:Key="BorderColor">#E0E0E0</SolidColorBrush>
    <SolidColorBrush x:Key="AccentColorPrimary">#4CAF50</SolidColorBrush>
    <SolidColorBrush x:Key="AccentColorSecondary">#FB8C00</SolidColorBrush>
    <SolidColorBrush x:Key="DangerColor">#E53935</SolidColorBrush>
    <SolidColorBrush x:Key="LightForegroundColor">#FFFFFF</SolidColorBrush>

    <SolidColorBrush x:Key="AccentColorPrimaryHover">#43A047</SolidColorBrush>
    <SolidColorBrush x:Key="AccentColorSecondaryHover">#F57C00</SolidColorBrush>
    <SolidColorBrush x:Key="DangerColorHover">#D32F2F</SolidColorBrush>
    <SolidColorBrush x:Key="DefaultButtonHover">#BDBDBD</SolidColorBrush>


    <FontFamily x:Key="BaseFont">Segoe UI</FontFamily>
    <sys:Double x:Key="BaseFontSize">14</sys:Double>
    <sys:Double x:Key="HeaderFontSize">24</sys:Double>


    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource BaseFont}" />
        <Setter Property="FontSize" Value="{StaticResource BaseFontSize}" />
        <Setter Property="Foreground" Value="{StaticResource ForegroundColor}" />
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="Padding" Value="8" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="FontSize" Value="{StaticResource BaseFontSize}" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="Background" Value="#E0E0E0" />
        <Setter Property="Foreground" Value="{StaticResource ForegroundColor}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="15,10" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="ButtonBorder" 
                        Background="{TemplateBinding Background}" 
                        CornerRadius="4"
                        Padding="{TemplateBinding Padding}">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="5" Color="#000000" Opacity="0.2"/>
                        </Border.Effect>

                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="{StaticResource DefaultButtonHover}"/>
                            <Setter TargetName="ButtonBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect ShadowDepth="4" BlurRadius="8" Color="#000000" Opacity="0.3"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <Style x:Key="PageHeader" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize" Value="{StaticResource HeaderFontSize}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Margin" Value="0,0,0,15" />
    </Style>

    <Style x:Key="CtaButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="{StaticResource AccentColorPrimary}" />
        <Setter Property="Foreground" Value="{StaticResource LightForegroundColor}" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource AccentColorPrimaryHover}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="EditButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="{StaticResource AccentColorSecondary}" />
        <Setter Property="Foreground" Value="{StaticResource LightForegroundColor}" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource AccentColorSecondaryHover}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="{StaticResource DangerColor}" />
        <Setter Property="Foreground" Value="{StaticResource LightForegroundColor}" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource DangerColorHover}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>